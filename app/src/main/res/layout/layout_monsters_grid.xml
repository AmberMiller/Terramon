<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/monster_view"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/monster_view_psychic" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/monster_image"
        android:layout_alignBottom="@+id/monster_view"
        android:layout_alignStart="@+id/monster_view"
        android:layout_alignEnd="@+id/monster_view"
        android:src="@mipmap/terramon_icon"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/monster_view"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="8dp" />
</RelativeLayout>